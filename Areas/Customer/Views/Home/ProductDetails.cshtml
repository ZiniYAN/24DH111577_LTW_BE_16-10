        @*New*@

        <div class="col-md-3 pro-section">
            <div class="form-group">
                @* Phần tạm tính *@
                @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
                {
                    @Html.Hidden("id", Model.product.ProductID)

                    <h4><strong>Số lượng</strong></h4>
                    <p>
                        <input type="number"
                               id="quantityInput"
                               name="quantity"
                               value="@Model.quantity"
                               min="1"
                               class="form-control"
                               onchange="updateEstimate()"
                               oninput="updateEstimate()" />
                    </p>

                    <h4><strong>Tạm tính</strong></h4>
                    <p><span id="estimateDisplay">@Model.estimatedValue.ToString("N0")</span> VND</p>

                    <button type="submit" class="btn btn-info">Thêm vào giỏ hàng</button>
                }
            </div>
        </div>
        <hr />
        @* Khối TopProduct *@
        <div>@Html.Partial("PVTopProduct", Model)</div>
    </div>
</div>



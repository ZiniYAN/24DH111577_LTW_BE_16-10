@model _24DH111577_LTW_BE_16_10.Models.Order

<div class="card mb-3">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <h6 class="card-title">Đơn hàng #@Model.OrderID</h6>
                <p class="card-text">Ngày đặt: @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                <p class="card-text">Tổng tiền: @String.Format("{0:N0} đ", Model.TotalAmount)</p>

                <!-- Order Items Preview -->
                @foreach (var item in Model.OrderDetails)
                {
                    <div class="order-item">
                        <img src="@item.Product.ProductImage" alt="@item.Product.ProductName" style="width: 50px; height: 50px; object-fit: cover;" />
                        <span>@item.Product.ProductName x @item.Quantity</span>
                    </div>
                }
            </div>
            <div class="col-md-4 text-right">
                <div class="status-badge mb-3">
                    @GetStatusBadge(Model.PaymentStatus)
                </div>
                <div class="action-buttons">
                    <a href="@Url.Action("OrderDetail", "Home", new { id = Model.OrderID })" class="btn btn-info btn-sm">
                        Xem chi tiết
                    </a>
                    @if (Model.PaymentStatus == "Delivered")
                    {
                        <a href="@Url.Action("Reorder", "Home", new { id = Model.OrderID })" class="btn btn-success btn-sm">
                            Mua lại
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@helper GetStatusBadge(string status)
{
    string badgeClass = "";
    string statusText = "";

    switch (status)
    {
        case "Pending":
            badgeClass = "badge-warning";
            statusText = "Chờ thanh toán";
            break;
        case "Processing":
            badgeClass = "badge-info";
            statusText = "Đang xử lý";
            break;
        case "Shipping":
            badgeClass = "badge-primary";
            statusText = "Đang vận chuyển";
            break;
        case "Delivered":
            badgeClass = "badge-success";
            statusText = "Đã giao";
            break;
        case "Cancelled":
            badgeClass = "badge-danger";
            statusText = "Đã hủy";
            break;
        default:
            badgeClass = "badge-secondary";
            statusText = status;
            break;
    }

    <span class="badge @badgeClass">@statusText</span>
}

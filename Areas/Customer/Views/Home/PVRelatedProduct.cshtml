@model _24DH111577_LTW_BE_16_10.Models.ViewModel.ProductDetailVM
@using PagedList.Mvc;

<style>
    /* ========================================
       RELATED PRODUCTS SECTION
    ======================================== */
    .related-products {
        margin: 50px 0;
        padding: 30px 20px;
        background: #f8f9fa;
        border-radius: 12px;
    }

    .related-products__title {
        font-size: 24px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 3px solid #3498db;
        display: inline-block;
    }

    .related-products__grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 25px;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .related-products__item {
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        display: flex;
        flex-direction: column;
    }

    .related-products__item:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    .related-products__image-wrapper {
        position: relative;
        overflow: hidden;
        background: #f8f9fa;
        height: 250px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .related-products__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .related-products__item:hover .related-products__image {
        transform: scale(1.1);
    }

    .related-products__info {
        padding: 15px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .related-products__name {
        font-size: 16px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 10px;
        line-height: 1.4;
        height: 44px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .related-products__price {
        font-size: 20px;
        font-weight: bold;
        color: #e74c3c;
        margin-top: auto;
    }

    .related-products__link {
        text-decoration: none;
        color: inherit;
        display: block;
        height: 100%;
    }

    /* Empty State */
    .related-products__empty {
        text-align: center;
        padding: 40px;
        color: #7f8c8d;
        font-size: 16px;
    }
 
</style>

@if (Model.RelatedProduct != null && Model.RelatedProduct.Any())
{
    <section class="related-products">
        <h2 class="related-products__title">Sản phẩm tương tự</h2>

        <ul class="related-products__grid">
            @foreach (var product in Model.RelatedProduct)
            {
                <li class="related-products__item">
                    <a href="@Url.Action("ProductDetails", "Home", new { id = product.ProductID })"
                       class="related-products__link">
                        <div class="related-products__image-wrapper">
                            <img src="@product.ProductImage"
                                 alt="@product.ProductName"
                                 class="related-products__image" />
                        </div>
                        <div class="related-products__info">
                            <h3 class="related-products__name">@product.ProductName</h3>
                            <p class="related-products__price">@product.ProductPrice.ToString("N0") ₫</p>
                        </div>
                    </a>
                </li>
            }
        </ul>
    </section>
}
else
{
    <div class="related-products__empty">
        <i class="fa-solid fa-box-open" style="font-size: 48px; margin-bottom: 15px; color: #bdc3c7;"></i>
        <p>Không có sản phẩm tương tự</p>
    </div>
}
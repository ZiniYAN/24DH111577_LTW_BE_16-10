@model _24DH111577_LTW_BE_16_10.Models.ViewModel.HomeProductVM
    <link rel="stylesheet" type="text/css" href="~/Content/CustomerHome.css" />

@if (Model.FeatureProducts != null && Model.FeatureProducts.Any())
            {
                <section class="container-fluid featureProd">
                    <h2>Sản phẩm nổi bật</h2>
                    <div class="feature-container">
                        @foreach (var product in Model.FeatureProducts)
                        {
                    <div class="fproduct-item">
                        <div>
                            <a href="@Url.Action("ProductDetail", "Home", new { id = product.ProductID})">
                                <img src="@Html.DisplayFor(modelItem => product.ProductImage)" />
                            </a>
                        </div>
                        <div>
                            <p class="prodPrice">
                            @Html.DisplayFor(modelItem => product.ProductPrice)</p>
                            <p class="prodName">
                            @Html.DisplayFor(modelItem => product.ProductName)</p>
                            <p class="prodCate">
                            @Html.DisplayFor(modelItem => product.Category.CategoryName)</p>
                            <p class="prodSale">Đã bán:&nbsp;
                            @Html.DisplayFor(modelItem => product.OrderDetails.Count)</p>
                        </div>
                    </div>
                }


                    </div>
                </section>                          
            }
else
            {
                <p>Không tìm thấy sản phẩm</p>
            }

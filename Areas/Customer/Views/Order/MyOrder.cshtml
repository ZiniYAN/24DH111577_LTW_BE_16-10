@model IEnumerable<_24DH111577_LTW_BE_16_10.Models.Order>
@{
    ViewBag.Title = "Đơn hàng của tôi";
    Layout = "~/Areas/Customer/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container" style="margin-top:20px;">
    <!-- Search -->
    <div class="search-panel">
        <h4 class="search-title">Tìm kiếm đơn hàng</h4>
        @using (Html.BeginForm("MyOrder", "Order", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-5">
                    <input type="text"
                           name="orderCode"
                           class="form-control search-input"
                           placeholder="Nhập mã đơn hàng..."
                           value="@Request.QueryString["orderCode"]" />
                </div>
                <div class="col-md-5">
                    <input type="text"
                           name="productName"
                           class="form-control search-input"
                           placeholder="Nhập tên sản phẩm..."
                           value="@Request.QueryString["productName"]" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-block search-btn">
                        <i class="glyphicon glyphicon-search"></i> Tìm kiếm
                    </button>
                </div>
            </div>
        }
    </div>

    <!-- Orders  -->
    <div class="orders-panel">
        <div class="orders-header">
            <h4>Đơn hàng của tôi</h4>
        </div>
        <div class="orders-body">
            <!-- Order Status Tabs -->
            <ul class="nav nav-tabs order-tabs">
                <li class="active">
                    <a href="#all" data-toggle="tab">Tất cả đơn</a>
                </li>
                <li>
                    <a href="#pending" data-toggle="tab">Chờ thanh toán</a>
                </li>
                <li>
                    <a href="#processing" data-toggle="tab">Đang xử lý</a>
                </li>
                <li>
                    <a href="#shipping" data-toggle="tab">Đang vận chuyển</a>
                </li>
                <li>
                    <a href="#delivered" data-toggle="tab">Đã giao</a>
                </li>
                <li>
                    <a href="#cancelled" data-toggle="tab">Đã hủy</a>
                </li>
            </ul>

            <!-- Tab Contents -->
            <div class="tab-content tab-content-custom">
                <!-- All Orders Tab -->
                <div class="tab-pane active" id="all">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var orderGroup in Model.GroupBy(o => o.PaymentStatus))
                        {
                            <div class="order-group">
                                <h6 class="group-title">@GetStatusName(orderGroup.Key)</h6>
                                @foreach (var order in orderGroup)
                                {
                                    @Html.Partial("PVOrderCard", order)
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <p class="no-orders">Bạn chưa có đơn hàng nào.</p>
                    }
                </div>

                <!-- Pending Tab -->
                <div class="tab-pane" id="pending">
                    @{
                        var pendingOrders = Model.Where(o => o.PaymentStatus == "Pending");
                        if (pendingOrders.Any())
                        {
                            foreach (var order in pendingOrders)
                            {
                                @Html.Partial("PVOrderCard", order)
                            }
                        }
                        else
                        {
                            <p class="no-orders">Không có đơn hàng nào đang chờ thanh toán.</p>
                        }
                    }
                </div>

                <!-- Processing Tab -->
                <div class="tab-pane" id="processing">
                    @{
                        var processingOrders = Model.Where(o => o.PaymentStatus == "Processing");
                        if (processingOrders.Any())
                        {
                            foreach (var order in processingOrders)
                            {
                                @Html.Partial("PVOrderCard", order)
                            }
                        }
                        else
                        {
                            <p class="no-orders">Không có đơn hàng nào đang xử lý.</p>
                        }
                    }
                </div>

                <!-- Shipping Tab -->
                <div class="tab-pane" id="shipping">
                    @{
                        var shippingOrders = Model.Where(o => o.PaymentStatus == "Shipping");
                        if (shippingOrders.Any())
                        {
                            foreach (var order in shippingOrders)
                            {
                                @Html.Partial("PVOrderCard", order)
                            }
                        }
                        else
                        {
                            <p class="no-orders">Không có đơn hàng nào đang vận chuyển.</p>
                        }
                    }
                </div>

                <!-- Delivered Tab -->
                <div class="tab-pane" id="delivered">
                    @{
                        var deliveredOrders = Model.Where(o => o.PaymentStatus == "Delivered");
                        if (deliveredOrders.Any())
                        {
                            foreach (var order in deliveredOrders)
                            {
                                @Html.Partial("PVOrderCard", order)
                            }
                        }
                        else
                        {
                            <p class="no-orders">Không có đơn hàng nào đã giao.</p>
                        }
                    }
                </div>

                <!-- Cancelled Tab -->
                <div class="tab-pane" id="cancelled">
                    @{
                        var cancelledOrders = Model.Where(o => o.PaymentStatus == "Cancelled");
                        if (cancelledOrders.Any())
                        {
                            foreach (var order in cancelledOrders)
                            {
                                @Html.Partial("PVOrderCard", order)
                            }
                        }
                        else
                        {
                            <p class="no-orders">Không có đơn hàng nào bị hủy.</p>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@helper GetStatusName(string status)
{
    switch (status)
    {
        case "Pending":
        case "Chờ thanh toán":<text>Chờ thanh toán</text>; break;
    case "Processing":
    case "Đang xử lý": <text>Đang xử lý</text>; break;
case "Shipping":
case "Đang vận chuyển": <text>Đang vận chuyển</text>; break;
case "Delivered":
case "Đã giao": <text>Đã giao</text>; break;
case "Cancelled":
case "Đã hủy": <text>Đã hủy</text>; break;
case "Done":
case "Hoàn thành": <text>Hoàn thành</text>; break;
default: <text>@status</text>; break;
}
}

<style>
    /* Search Panel */
    .search-panel {
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .search-title {
        margin: 0 0 15px 0;
        color: #333;
        font-size: 18px;
        font-weight: 600;
    }

    .search-input {
        height: 38px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .search-btn {
        height: 38px;
        font-weight: 600;
    }

    /* Orders Panel */
    .orders-panel {
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 4px;
        margin-bottom: 20px;
    }

    .orders-header {
        background: #f5f5f5;
        padding: 15px 20px;
        border-bottom: 1px solid #ddd;
        border-radius: 4px 4px 0 0;
    }

    .orders-header h4 {
        margin: 0;
        color: #333;
        font-size: 18px;
        font-weight: 600;
    }

    .orders-body {
        padding: 20px;
    }

    /* Tabs */
    .order-tabs {
        border-bottom: 2px solid #ddd;
        margin-bottom: 20px;
    }

    .order-tabs > li > a {
        color: #555;
        font-weight: 500;
        font-size: 14px;
        padding: 10px 15px;
        text-decoration: none;
    }

    .order-tabs > li.active > a,
    .order-tabs > li.active > a:hover,
    .order-tabs > li.active > a:focus {
        color: #337ab7;
        border-bottom: 2px solid #337ab7;
        background: #fff;
    }

    /* Tab Content */
    .tab-content-custom {
        min-height: 300px;
    }

    /* Order Group */
    .order-group {
        margin-bottom: 25px;
    }

    .group-title {
        background: #f8f9fa;
        padding: 10px 15px;
        margin: 0 0 15px 0;
        border-radius: 4px;
        border-left: 4px solid #337ab7;
        font-size: 15px;
        font-weight: 600;
        color: #333;
    }

    /* No orders message */
    .no-orders {
        text-align: center;
        padding: 40px 20px;
        color: #999;
        font-size: 15px;
    }
</style>

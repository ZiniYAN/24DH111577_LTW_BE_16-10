@model _24DH111577_LTW_BE_16_10.Models.Product
<head>
    <style>
        img{
            height: 250px;
            max-width: 250px;
        }
    </style>
</head>
<div class="container-fluid">
    <div class="div-horizontal bg-info">
        <div class="col-md-3">
            <img src="@Html.DisplayFor(model => model.ProductImage)"/>
        </div>
        <div class="col-md-9 bg-info">
            <dl>
                <dt>Tên sản phẩm</dt>
                <dd> @Html.DisplayFor(model => model.ProductName)"</dd>
                <dt>Mô tả</dt>
                <dd> @Html.DisplayFor(model => model.ProductDescription)"</dd>
                <dt>Đơn gía</dt>
                <dd> @Html.DisplayFor(model => model.ProductPrice)"</dd>
                <dt>Danh mục</dt>
                <dd> @Html.DisplayFor(model => model.Category.CategoryName)"</dd>
            </dl>
        </div>
    </div>
</div>
